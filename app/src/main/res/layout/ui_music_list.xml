<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:scrollbars="none"
        android:id="@+id/sv_lay"
        android:layout_height="50dp">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/rg_music_list"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:text="新歌榜"
                android:padding="10dp"
                android:id="@+id/rb1"
                android:background="@drawable/bang_rb_select"
                android:button="@null"
                android:gravity="center"
                android:layout_height="match_parent" />
            <RadioButton
                android:layout_width="wrap_content"
                android:text="热歌榜"
                android:padding="10dp"
                android:id="@+id/rb2"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/bang_rb_select"
                android:layout_height="match_parent" />
            <RadioButton
                android:layout_width="wrap_content"
                android:text="摇滚榜"
                android:padding="10dp"
                android:id="@+id/rb3"
                android:button="@null"
                android:background="@drawable/bang_rb_select"
                android:gravity="center"
                android:layout_height="match_parent" />
            <RadioButton
                android:layout_width="wrap_content"
                android:text="爵士"
                android:padding="10dp"
                android:id="@+id/rb4"
                android:background="@drawable/bang_rb_select"
                android:button="@null"
                android:gravity="center"
                android:layout_height="match_parent" />
            <RadioButton
                android:layout_width="wrap_content"
                android:text="流行"
                android:padding="10dp"
                android:id="@+id/rb5"
                android:button="@null"
                android:background="@drawable/bang_rb_select"
                android:gravity="center"
                android:layout_height="match_parent" />
            <RadioButton
                android:layout_width="wrap_content"
                android:text="欧美金曲榜"
                android:padding="10dp"
                android:id="@+id/rb6"
                android:background="@drawable/bang_rb_select"
                android:button="@null"
                android:gravity="center"
                android:layout_height="match_parent" />
            <RadioButton
                android:layout_width="wrap_content"
                android:text="经典老歌榜"
                android:padding="10dp"
                android:id="@+id/rb7"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/bang_rb_select"
                android:layout_height="match_parent" />
            <RadioButton
                android:layout_width="wrap_content"
                android:text="情歌对唱榜"
                android:padding="10dp"
                android:button="@null"
                android:id="@+id/rb8"
                android:background="@drawable/bang_rb_select"
                android:gravity="center"
                android:layout_height="match_parent" />
            <RadioButton
                android:layout_width="wrap_content"
                android:text="影视金曲榜"
                android:padding="10dp"
                android:button="@null"
                android:id="@+id/rb9"
                android:background="@drawable/bang_rb_select"
                android:gravity="center"
                android:layout_height="match_parent" />
            <RadioButton
                android:layout_width="wrap_content"
                android:text="络歌曲榜"
                android:padding="10dp"
                android:button="@null"
                android:id="@+id/rb10"
                android:background="@drawable/bang_rb_select"
                android:gravity="center"
                android:layout_height="match_parent" />
        </RadioGroup>
    </HorizontalScrollView>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vp_hot"></android.support.v4.view.ViewPager>

</LinearLayout>